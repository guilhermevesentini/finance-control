{
  "compilerOptions": {
    // ...
    "lib": ["ES5", "dom", "es6", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "types": [
      "element-plus/global",
      "reflect-metadata",
      "vite/client",
      "vitest",
      "vitest/globals"
    ],
    "pretty": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
